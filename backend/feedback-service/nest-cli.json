{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "templates/**/*", "watchAssets": true },
      {
        "include": "grpc/protos/**/*.proto",
        "watchAssets": true
      },
      {
        "include": "protos/**/*.proto",
        "watchAssets": true
      }
    ]
  }
}
